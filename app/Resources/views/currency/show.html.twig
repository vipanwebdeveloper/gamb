{% extends 'base.html.twig' %}

{% block body %}
    <h1>Currency</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ currency.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ currency.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ currency.slug }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if currency.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Sortorder</th>
                <td>{{ currency.sortOrder }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{{ currency.createdOn }}</td>
            </tr>
            <tr>
                <th>Lastupdated</th>
                <td>{{ currency.lastUpdated }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('currencies_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('currencies_edit', { 'id': currency.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
