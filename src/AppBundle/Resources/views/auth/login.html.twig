{% extends '@App/nomenu.html.twig' %}


{% block body %}
  <div class="logo">
    <a href="javascript:void(0);">ADMIN<b>Area</b></a>
    <small><?= APP_DESCRIPTION;?> - Login</small>
  </div>
  <div class="card">
    <div class="body">
		<form class="form-horizontal" role="form" method="POST" action="{{ path('security_login_check') }}">
			<div id="sign_in" class="msg">Sign in to start your session</div>
			{% if error %}
				<div class="alert alert-danger">
					{{ error.messageKey|trans(error.messageData) }}
				</div>
			{% endif %}
			<div class="input-group">
				<span class="input-group-addon">
					<i class="material-icons">person</i>
				</span>
				<div class="form-line">
					<input id="email" type="text" class="form-control" name="_email" value="{{ last_username }}"  required autofocus placeholder="Email Address">
				</div>
			</div>
			<div class="input-group">
				<span class="input-group-addon">
					<i class="material-icons">lock</i>
				</span>
				<div class="form-line">
					<input id="password" type="password" class="form-control" name="_password" required>
				</div>
			</div>
			<div class="row">
				<div class="col-xs-8 p-t-5">
					<input type="checkbox" name="rememberme" id="rememberme" class="filled-in chk-col-pink">
					<label for="rememberme">Remember Me</label>
				</div>
				<div class="col-xs-4">
					<button class="btn btn-block bg-pink waves-effect" type="submit">SIGN IN</button>
				</div>
			</div>
			<div class="row m-t-15 m-b--20">
				<div class="col-xs-6">
					<a href="{{ path('register') }}">Register Now!</a>
				</div>
				<div class="col-xs-6 align-right">
					<a href="{{ path('forgot_password') }}">Forgot Password?</a>
				</div>
			</div>
		</form>
	</div>
  </div>
{% endblock %}
