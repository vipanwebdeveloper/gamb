{% extends '@App/nomenu.html.twig' %}

{% form_theme form '@App/default/form/nolabel.html.twig' %}

{% block body %}
	<div class="logo">
		<a href="javascript:void(0);">ADMIN<b>Area</b></a>
		<small><?= APP_DESCRIPTION;?> - Login</small>
	</div>
	<div class="card">
		<div class="body">
			{{ form_start(form, {'attr': {'id': 'sign_up'}}) }}
				<div class="msg">Register a new membership</div>
				<div class="input-group">
					<span class="input-group-addon">
						<i class="material-icons">person</i>
					</span>
					<div class="form-line">
						{{ form_row(form.name, {'attr': {'class': 'form-control', 'required':'required', 'autofocus':'autofocus', 'placeholder': 'Name Surname'}}) }}
					</div>
				</div>
				<div class="input-group">
					<span class="input-group-addon">
						<i class="material-icons">email</i>
					</span>
					<div class="form-line">
						{{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder':'Email Address','required': 'required'}}) }}
					</div>
				</div>
				<div class="input-group">
					<span class="input-group-addon">
						<i class="material-icons">lock</i>
					</span>
					<div class="form-line">
						{{ form_row(form.plainPassword.first, {'attr': {'class': 'form-control', 'minlength': 6, 'placeholder': 'Password', 'required': 'required'}}) }}
					</div>
				</div>
				<div class="input-group">
					<span class="input-group-addon">
						<i class="material-icons">lock</i>
					</span>
					<div class="form-line">
						{{ form_row(form.plainPassword.second, {'attr': {'class': 'form-control', 'minlength': 6, 'placeholder': 'Confirm Password', 'required': 'required'}}) }}
					</div>
				</div>
				<div class="form-group">
					<input type="checkbox" name="terms" id="terms" class="filled-in chk-col-pink">
					<label for="terms">I read and agree to the <a href="javascript:void(0);">terms of usage</a>.</label>
				</div>

				<button class="btn btn-block btn-lg bg-pink waves-effect" type="submit">SIGN UP</button>

				<div class="m-t-25 m-b--5 align-center">
					<a href="{{ path('login') }}">You already have a membership?</a>
				</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
		head.load('{{ asset('js/pages/examples/sign-up.js')}}');
	</script>
{% endblock %}
