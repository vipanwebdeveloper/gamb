{% extends '@App/base.html.twig' %}

{% block body %}
    <h1>Currency</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ currency.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ currency.name }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ currency.code }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if currency.active %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ currency.symbol }}</td>
            </tr>
            <tr>
                <th>Createdon</th>
                <td>{% if currency.createdOn %}{{ currency.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modifiedon</th>
                <td>{% if currency.modifiedOn %}{{ currency.modifiedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Iconimage</th>
                <td>{{ currency.iconimage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('currency_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('currency_edit', { 'id': currency.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
